extends ../shared/template
block content
  form(method='post', action='/cart')
    input(type='hidden', name='_method', value='delete')
    button.btn.btn-warning(type='submit') Clear Cart

  form(action='/charge', method='post')
    script.stripe-button(src='https://checkout.stripe.com/checkout.js', data-key=key, data-image='/img/stripe.png', data-name='Amazon Global', data-amount=Math.round((total * 100)))

  table#products.table.table-bordered
    thead
      tr
        th Product
        th Image
        th Price
        th Quantity
        th
    tbody
      each id in ids
        tr
          td= products[id].p.name
          td(style='background-image:url("#{products[id].p.photo}")')
          td $#{products[id].p.price.toFixed(2)}
          td= products[id].c
          td= '$' + (products[id].p.price * products[id].c).toFixed(2)
      tr
        td
        td
        td
        td SubTotal
        td= '$' + subtotal.toFixed(2)
      tr
        td
        td
        td
        td Tax
        td= '$' + tax.toFixed(2)
    tfoot
      tr
        td
        td
        td
        td Total
        td= '$' + total.toFixed(2)

